<%= simple_form_for(@restaurant) do |f| %>
  <div class="form--">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORIES, wrapper: false %>
    <%= f.submit %>
  </div>
<% end %>
